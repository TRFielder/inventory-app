extends layout 

block content 
    h1=title

    p #[strong Are you sure you want to delete this recipe?]

    p #[strong Description: ] #{description}
    hr
    h4 Ingredients 
    ul(class="list-nobullet") 
        each ingredient in ingredients
            li 
                a(href=ingredient.url) #{ingredient.name}
    
    form(method="POST" action="")
        div 
            input#id(type="hidden",name="id", required="true", value=recipe._id)

        button(type="submit") Delete